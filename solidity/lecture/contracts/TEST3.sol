pragma solidity ^0.8.0;

contract MainContract {

    uint public amount;

    event Received(address caller, address origin, uint amount);

    function deposite(uint _amount) public {
        emit Received(msg.sender, tx.origin, _amount);
        amount += _amount;
    }

}

